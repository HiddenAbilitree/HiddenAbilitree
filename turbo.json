{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalDependencies": [".env"],
  "globalEnv": [
    "CEREBRAS_API_KEY",
    "DATABASE_URL",
    "GITHUB_PAT",
    "GITHUB_USERNAME",
    "QDRANT_API_KEY",
    "QDRANT_URL",
    "VOYAGE_API_KEY",
    "WEBHOOK_SECRET"
  ],
  "tasks": {
    "build": {
      "cache": false,
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "cache": false,
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "cache": false,
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
